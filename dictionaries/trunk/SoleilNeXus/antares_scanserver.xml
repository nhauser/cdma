        <path>/{NXentry}/{NXinstrument}/{NXdetector}/sliceScale</path>
		<call>HarvestEquipmentAttributes</call>
    </item>
    <item key="energyScale">
        <path>/{NXentry}/{NXinstrument}/{NXdetector}/energyScale</path>
