    </item>
    <item key="stepTime">
        <path>/{NXentry}/{NXinstrument}/{NXdetector}/stepTime</path>
		<call>HarvestEquipmentAttributes</call>
    </item>
    <item key="firstXChannel">
        <path>/{NXentry}/{NXinstrument}/{NXdetector}/detectorFirstXChannel</path>
