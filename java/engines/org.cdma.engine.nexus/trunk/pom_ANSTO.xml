<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

	<groupId>org.cdma.engines</groupId>
	<artifactId>nexus</artifactId>
	<version>0.0.7-SNAPSHOT</version>
	<name>CDMA Engine Nexus</name>
	<description>CDMA Engine: NeXus based on Soleil's API</description>
    <packaging>eclipse-plugin</packaging>

	<scm>
		<connection>scm:svn:http://cdma.googlecode.com/svn/java/engines/org.cdma.engine.nexus/trunk</connection>
		<developerConnection>scm:svn:https://cdma.googlecode.com/svn/java/engines/org.cdma.engine.nexus/trunk</developerConnection>
	</scm>

    <parent>
        <groupId>org.codehaus.gumtree</groupId>
        <artifactId>org.cdma.parent</artifactId>
        <version>3.0.0-SNAPSHOT</version>
        <relativePath>../../../others/org.cdma.parent</relativePath>
    </parent>

	<dependencies>
		<dependency>
			<groupId>org.nexusformat</groupId>
			<artifactId>jnexus</artifactId>
		</dependency>
		<dependency>
			<groupId>org.cdma</groupId>
			<artifactId>Core</artifactId>
		</dependency>
	</dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>${tycho.groupId}</groupId>
                <artifactId>tycho-source-plugin</artifactId>
                <version>${tycho.version}</version>
                <executions>
                    <execution>
                        <id>plugin-source</id>
                        <goals>
                            <goal>plugin-source</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

		<sourceDirectory>src/</sourceDirectory>
    </build>

    <developers>
        <developer>
            <id>rodriguez</id>
            <name>rodriguez</name>
            <email>clement.rodriguez@synchrotron-soleil.fr</email>
            <url>http://www.synchrotron-soleil.fr</url>
            <organization>Synchrotron Soleil</organization>
            <organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
            <roles>
                <role>author</role>
            </roles>
            <timezone>1</timezone>
        </developer>
    </developers>
</project>
