	<groupId>org.cdma.plugins</groupId>
	<artifactId>NexusSoleil</artifactId>
	<version>1.4.7</version>
	<name>CDMA NeXus Soleil Plugin</name>

	<description>
    This project is Soleil's NeXus plugin for the CDMA
    </description>
	<scm>
		<connection>scm:svn:http://cdma.googlecode.com/svn/java/plugins/org.cdma.plugin.soleil/tags/NexusSoleil-1.4.7</connection>
		<developerConnection>scm:svn:https://cdma.googlecode.com/svn/java/plugins/org.cdma.plugin.soleil/tags/NexusSoleil-1.4.7</developerConnection>
	</scm>
	<dependencies>
		<dependency>
			<groupId>org.cdma</groupId>
			<artifactId>Core</artifactId>
			<version>3.1.1</version>
		</dependency>
		<dependency>
			<groupId>org.cdma</groupId>
			<artifactId>utilities</artifactId>
			<version>0.0.4</version>
		</dependency>
		<dependency>
			<groupId>org.cdma.engines</groupId>
			<artifactId>nexus</artifactId>
			<version>0.0.5</version>
		</dependency>
		<dependency>
			<groupId>org.jdom</groupId>
			<artifactId>jdom</artifactId>
			<version>2.0.2</version>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src/</sourceDirectory>
		<resources>
			<resource>
				<directory>META-INF</directory>
				<targetPath>META-INF</targetPath>
			</resource>
			<resource>
				<directory>OSGI-INF</directory>
				<targetPath>OSGI-INF</targetPath>
			</resource>
		</resources>
	</build>

